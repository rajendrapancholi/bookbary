{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",          // compiled JS goes here
    "rootDir": ".",              // compile from backend root
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],       // compile all TS files in the repo
  "exclude": ["node_modules", "dist"]
}
